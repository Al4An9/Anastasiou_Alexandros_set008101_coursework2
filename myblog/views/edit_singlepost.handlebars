<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form method="post" action="/posts/posts/edit/{{post._id}}">
      <legend>Edit Post</legend>
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="title" name="title" class="form-control" id="post-title" value={{post.title}}>
      </div>
      <div class="form-group">
        <label for="post-url">Url</label>
        <input type="url" name="url" class="form-control" id="post-url" value={{post.url}}>
      </div>
      <div class="form-group">
        <label for="post-summary">Summary</label>
        <textarea name="summary" class="form-control" id="post-summary">{{post.summary}}</textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>